@using Skinnix.RhymeTool.Client.Data.Structure;

@inject IJSRuntime js

@{
    void TextareaContent()
    {
        if (Document == null)
            return;

        var index = 0;
        foreach (var node in Document.Nodes)
        {
            switch (node)
            {
                case TextRhymeNode text:
                    <p data-node-id="@node.Id" data-node-index="@index">
                        @if (!string.IsNullOrEmpty(text.Text))
                        {
                            @(text.Text);
                        }
                    </p>
                    break;
            }

            index++;
        }
    }
}

<div class="editor-wrapper">
    <div class="editor-header">

    </div>

    <div class="editor-content d-none"
            @ref="content">
        @{
            TextareaContent();
        }
    </div>

    <div class="editor-textarea" role="textbox"
            contenteditable
            data-refreshed="@refreshGuid"
            @ref="editor">
    </div>
</div>