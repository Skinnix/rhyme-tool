<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Skinnix.Compoetry.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Skinnix.Compoetry.Maui"
    xmlns:pages="clr-namespace:Skinnix.Compoetry.Maui.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Compoetry">

    <ShellContent
        x:Name="defaultContent"
        Title="Dateien"
        Route=""
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate pages:MainPage}" />

    <MenuItem
        Text="Einstellungen"
        Clicked="Settings_Clicked"
        IconImageSource="{FontImageSource FontFamily=FontAwesomeSolid, Size=32, Color=Black, Glyph=&#xf013;}" />
</Shell>
