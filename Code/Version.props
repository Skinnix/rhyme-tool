<Project>
	<PropertyGroup>
		<BaseVersion>0.9</BaseVersion>
		<IntVersion>5</IntVersion>
	</PropertyGroup>

	<PropertyGroup>
		<AutoGeneratedVersionSuffix>$([System.Math]::Floor($([MSBuild]::Divide($([System.DateTimeOffset]::UtcNow.ToUnixTimeSeconds()), 86400)))).$([MSBuild]::Divide($([MSBuild]::Modulo($([System.DateTimeOffset]::UtcNow.ToUnixTimeSeconds()), 86400)), 2))</AutoGeneratedVersionSuffix>
		<Version>$(BaseVersion)</Version>
		<AssemblyVersion>$(BaseVersion).$(AutoGeneratedVersionSuffix)</AssemblyVersion>
		<ProductVersion>$(AssemblyVersion)</ProductVersion>
		<FileVersion>$(AssemblyVersion)</FileVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(UseMaui)' == 'true'">
		<ApplicationDisplayVersion>$(Version)</ApplicationDisplayVersion>
		<ApplicationVersion>$(IntVersion)</ApplicationVersion>
	</PropertyGroup>
</Project>
